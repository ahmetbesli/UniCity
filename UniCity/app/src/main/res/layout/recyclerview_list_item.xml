<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/cardview_light_background"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewAdvertName"
                android:text="Heading"
                android:textColor="@color/colorBlack"
                android:background="@color/cardview_light_background"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textViewDescription"
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/cardview_light_background"
                android:text="Description" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewAdvertDate"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="25.03.2018"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/textViewNumberOf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number Of person : "
                    android:layout_marginLeft="100dp"
                    android:textColor="@color/colorBlack" />

                <TextView
                    android:id="@+id/textViewNumberOfPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@color/colorBlack" />

            </LinearLayout>





            <RelativeLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="56dp"
                    android:layout_marginRight="56dp"
                    android:layout_toLeftOf="@+id/button2"
                    android:layout_toStartOf="@+id/button2"
                    android:text="Incele" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="71dp"
                    android:layout_marginRight="71dp"
                    android:text="BaÅŸvur" />

            </RelativeLayout>







        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>