<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/selectCourseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9F5">



    <TextView
        android:id="@+id/selectedCourseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:textColor="#0B0B61"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/selectedCourseTextView"
        android:layout_centerHorizontal="true"
        android:text="Selected course :" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/coursesListview"
        android:layout_alignEnd="@+id/departmentsSpinner"
        android:layout_alignRight="@+id/departmentsSpinner"
        android:text="Please select your project course"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/departmentsSpinner"
        android:layout_alignEnd="@+id/departmentsSpinner"
        android:layout_alignRight="@+id/departmentsSpinner"
        android:text="Please select your department"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/coursesListview"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@+id/createAdvertButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="258dp" />

    <Spinner
        android:id="@+id/facultiesSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="41dp" />

    <Spinner
        android:id="@+id/departmentsSpinner"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/coursesListview"
        android:layout_alignLeft="@+id/facultiesSpinner"
        android:layout_alignStart="@+id/facultiesSpinner"
        android:layout_marginBottom="42dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="130dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/facultiesSpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Please select your faculty"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/createAdvertButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="69dp"
        android:src="@drawable/create_advert_ic" />

</RelativeLayout>